{% extends '::base.html.twig' %}

{% block main_content %}
	<div class="navbar navbar-fixed-top">
	    <div class="navbar-inner">
	    	<div class="container">
		        <a class="brand" href="{{ path('imobile_website_default_index') }}">iMobile</a>
		        {% block main_menu %}
		        	{{ knp_menu_render('WebsiteBundle:Builder:mainMenu', {'nav_type': 'navbar', 'allow_safe_labels': true}) }}
		        {% endblock %}

		        {% block right_menu %}
		        	{{ knp_menu_render('WebsiteBundle:Builder:rightMenu', {'nav_type': 'navbar', 'pull': 'right', 'allow_safe_labels': true}) }}
		        {% endblock %}
		    </div>
	    </div>
	</div>
	{% block content %}{% endblock %}
{% endblock %}

